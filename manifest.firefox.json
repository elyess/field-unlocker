{
  "manifest_version": 3,
  "name": "Field Unlocker",
  "version": "1.0",
  "description": "Removes readonly and disabled attributes from input fields on allowed sites.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "field-unlocker@example.com",
      "strict_min_version": "109.0"
    }
  }
}
